@model CRS.Web.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center ">
   
        <form class="col-6 card p-4" method="post" action="/Notification/ResetPasswordConfirmation">
            <h3>Zresetuj hasło</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Token" type="hidden" />
            <input asp-for="UserID" type="hidden" />
            <div class="form-group">
                <label>Nowe hasło</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Potwierdź hasło</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary float-right">Potwierdź</button>
            </div>
        </form>
    </div>
</div>